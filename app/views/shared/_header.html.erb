<div class="flex justify-between items-center p-5 bg-lime-300 w-screen mb-4 shadow-lg">
  <div class="flex gap-2">
    <%= link_to "Blog", root_path, class: "btn-primary" %>
    <%= link_to "Create Post", new_post_path, class: "btn-primary" %>
  </div>

  <div class="flex gap-2">
    <% if user_signed_in? %>
      <%= link_to "Profile", edit_user_registration_path, class: "btn-primary" %>
      <%= link_to "Log Out", destroy_user_session_path, data: { "turbo_method": :delete }, class: "btn-outlined" %>
    <% else %>
      <%= link_to "Log In", new_user_session_path, class: "btn-primary" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "btn-outlined" %>
    <% end %>
  </div>
</div>