<div class="mx-4 mt-4 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
  <% @posts.each do |post| %>
    <div class="flex flex-col">
      <div class="flex font-semibold justify-center w-[100%] bg-lime-300 mb-2 rounded shadow-lg">
        <%= post.status %>
      </div>
      <%=render post %>
    </div>
  <% end %>
</div>