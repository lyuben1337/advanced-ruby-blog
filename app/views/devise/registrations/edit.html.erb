<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mt-20 w-[500px] h-min p-5 rounded-xl shadow-lg bg-lime-300 flex flex-col gap-4 mx-auto items-center">
    <div class="text-2xl font-bold">Profile</div>
    <%= render "shared/input", { form_entity: resource_name, form_field: :email } %>
    <div class="w-[100%] flex flex-col gap-4">
      <%= render "shared/input", { form_entity: resource_name, form_field: :current_password } %>
      <%= render "shared/input", { form_entity: resource_name, form_field: :password } %>
      <%= render "shared/input", { form_entity: resource_name, form_field: :password_confirmation } %>
    </div>
    <div class="flex w-[100%] justify-between">
      <div class="flex gap-2">
        <%= link_to "My Blog", user_posts_path, class: "btn-primary" %>
        <%= link_to "Back", :back, class: "btn-primary" %>
      </div>
      <%= f.submit "Update", class: "btn-outlined" %>
    </div>
  </div>

<% end %>


<div class="mt-20 w-[500px] h-min p-5 rounded-xl border-2 border-red-500 flex flex-col gap-4 mx-auto items-center">
  <div class="w-[100%] text-red-600">Danger zone</div>
  <div class="w-[100%]">
    <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn-danger" %>
  </div>
</div>
